{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "strict": true,
    "useDefineForClassFields": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@tidb-cloud-uikit/utils": ["./packages/uikit/src/utils"],
      "@tidb-cloud-uikit/icons": ["./packages/uikit/src/icons"],
      "@tidb-cloud-uikit/components": ["./packages/uikit/src/components"],
      "@tidb-cloud-uikit/components/hook-form": ["./packages/uikit/src/components/hook-form"]
    }
  },
  "include": ["packages"],
  "exclude": ["node_modules", "dist"]
}
